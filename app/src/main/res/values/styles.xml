<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/armata</item>
    </style>

    <style name="PopupSelectList">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dialog_select_height</item>
    </style>

    <dimen name="dialog_select_height">18dp</dimen>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tab_text</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@drawable/tab_background</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/armata</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
